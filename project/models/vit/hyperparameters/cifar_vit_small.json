{
    "trainer": {
        "module": "trainers.base_classification",
        "class": "LightningClassificationModule",
        "params": {
            "classifier": {
                "module": "project.models.vit.modules.vit.vit_for_small_dataset",
                "class": "ViT",
                "params": {
                    "image_size": 32,
                    "patch_size": 4,
                    "num_classes": 10,
                    "dim": 256,
                    "depth": 6,
                    "heads": 16,
                    "mlp_dim": 512,
                    "dropout": 0.1,
                    "emb_dropout": 0.1
                }
            }
        }
    },
    "optimizer": {
        "optimizer": {
            "type": "Adam",
            "lr": 0.0004,
            "betas": [
                0.5,
                0.999
            ]
        },
        "lr_scheduler": {
            "monitor": "val_loss",
            "scheduler": {
                "type": "ReduceLROnPlateau",
                "mode": "min",
                "factor": 0.5,
                "threshold": 1e-08,
                "threshold_mode": "rel",
                "patience": 0,
                "verbose": true
            }
        }
    },
    "early_stopping": {
        "monitor": "val_loss",
        "patience": 5,
        "verbose": true,
        "mode": "min",
        "strict": false
    },
    "model_checkpoint": {
        "save_top_k": 1,
        "save_last": true,
        "verbose": true,
        "monitor": "val_loss",
        "mode": "min"
    },
    "data": {
        "data_loader": "cifar10",
        "location": "./data/cifar10",
        "train_batch_size": 128,
        "test_batch_size": 128
    },
    "logger": {
        "module": "pytorch_lightning.loggers",
        "class": "WandbLogger",
        "params": {
            "project": "cifar10",
            "name": "vit_vanilla",
            "save_dir": "./logs",
            "log_model": "all"
        }
    },
    "data_loader": "cifar10",
    "cuda": true,
    "max_epochs": 100
}