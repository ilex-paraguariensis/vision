{
    "train": "base_classification",
    "model": {
        "classifier": {
            "folder": "modules.resnet.resnet",
            "class": "ResNet",
            "params": {
                "block": "BasicBlock",
                "layers": [
                    3,
                    4,
                    6,
                    3
                ],
                "num_classes": 10,
                "in_channels": 3,
                "zero_init_residual": false,
                "groups": 1,
                "width_per_group": 64,
                "replace_stride_with_dilation": [
                    false,
                    false,
                    false
                ],
                "norm_layer": "BatchNorm2d"
            }
        }
    },
    "configure_optimizers": {
        "optimizer": {
            "type": "Adam",
            "lr": 0.0004,
            "betas": [
                0.5,
                0.999
            ]
        },
        "lr_scheduler": {
            "monitor": "val_loss",
            "scheduler": {
                "type": "ReduceLROnPlateau",
                "mode": "min",
                "factor": 0.5,
                "threshold": 1e-08,
                "threshold_mode": "rel",
                "patience": 0,
                "verbose": true
            }
        }
    },
    "early_stopping": {
        "monitor": "val_loss",
        "patience": 5,
        "verbose": true,
        "mode": "min",
        "strict": false
    },
    "model_checkpoint": {
        "save_top_k": 1,
        "save_last": true,
        "verbose": true,
        "monitor": "val_loss",
        "mode": "min"
    },
    "data": {
        "data_loader": "cifar10",
        "location": "./data/cifar10",
        "train_batch_size": 64,
        "test_batch_size": 64
    },
    "logger": {
        "module": "pytorch_lightning.loggers",
        "class": "WandbLogger",
        "params": {
            "project": "cifar10",
            "name": "resnet18",
            "save_dir": "./logs",
            "log_model": "all"
        }
    },
    "data_loader": "cifar10",
    "cuda": true,
    "max_epochs": 100
}